@model IEnumerable<Project2_1_DailyBlogger.Models.BlogPost>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Blog Posts</title>
</head>

<body>
    <p>

    </p>
    @foreach (var item in model)
    {
        <div>
            @Html.DisplayFor(m => item.blogTitle)
            <p>@Html.DisplayFor(m => item.content)</p>
            <p>@Html.DisplayFor(m =>item.blogDate)</p>
        </div>
    }
</body>
</html>
